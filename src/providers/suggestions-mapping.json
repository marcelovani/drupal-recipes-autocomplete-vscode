{
    "comment": "This file provides a mapping to fill in the items that are dynamic. The values represent the path (dot-notation) in the completion objects.",
    "config": {
        "actions": {
            "set": {
                "comment": "Provides suggestions for the config in context.",
                "property_name": "config.actions"
            },
            "create": "config.actions",
            "createIfNotExists": "config.actions",
            "simpleConfigUpdate": "config.actions",
            "placeBlockInDefaultTheme": {
                "id": "getBlockId()",
                "region": {
                    "getThemeNames()": "getRegionNames()"
                },
                "default_region": "getRegionNames()",
                "plugin": "getPluginName()"
            },
            "placeBlockInAdminTheme": {
                "id": "getBlockId()",
                "region": {
                    "getThemeNames()": "getRegionNames()"
                },
                "default_region": "getRegionNames()",
                "plugin": "getPluginName()"
            },
            "setRegion": "getRegionNames()",
            "hideComponent": "getComponentNames()",
            "hideComponents": [
                "getComponentNames()"
            ],
            "grantPermission": {
                "callback": "getUserPermissions()"
            },
            "setThirdPartySetting": {
                "module": "getModuleNames()",
                "key": "config.actions"
            },
            "grantPermissionsForEachTaxonomyVocabulary": "getVocabularies()",
            "grantPermissionsForEachMediaType": "getMediaTypes()",
            "user.role.*": {
              "grantPermissions": "global.permissions"
            }
        }
    }
}
