{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "resolveJsonModule": true,
    "outDir": "./out",
    "sourceMap": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "allowJs": true,
    "types": ["node", "vscode", "mocha"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "out", ".vscode-test"]
}
